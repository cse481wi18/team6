{
  "entrypoint": "index.html",
  "shell": "src/recycle-ui-app.html",
  "fragments": [
    "src/recycle-ui-add-control.html",
    "src/recycle-ui-class-control.html",
    "src/recycle-ui-map-control.html"
  ],
  "lint": {
    "rules": [
      "polymer-2"
    ]
  },
  "sources": [
    "src/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json"
  ],
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
